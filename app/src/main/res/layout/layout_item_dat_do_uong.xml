<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/imgDatDoUong"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_gravity="center">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTenDoUong"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Tên đồ uống"/>
            <TextView
                android:id="@+id/tvGiaSP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="#FD0000"
                android:text="Giá sp"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvTruSL"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="-"
                android:textColor="@color/black"
                android:gravity="center"
                android:textStyle="bold"
                android:background="@drawable/add_backround"/>
            <TextView

                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:text="1"
                android:gravity="center"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"/>
            <TextView
                android:id="@+id/tvCongSL"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:text="+"
                android:textColor="@color/black"
                android:gravity="center"
                android:background="@drawable/add_backround"/>
            <TextView
                android:id="@+id/tvTongSP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="135dp"
                android:textColor="#FD0000"
                android:text="Tổng sp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>