<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvHoTen"
            android:textSize="15dp"
            android:text="hoten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvSDT"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="SDT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvNamSinh"
            android:textStyle="bold"
            android:textSize="15dp"
            android:text="NamSinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvGioiTinh"
            android:textSize="15dp"
            android:text="GioiTinh"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvMatKhau"
            android:textSize="15dp"
            android:text="MatKhau"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvTrangThai"
            android:textSize="15dp"
            android:text="TrangThai"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>
    <ImageView
        android:id="@+id/imgUpdateNhanVien"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_edit"
        android:layout_gravity="center"
        android:layout_weight="1"/>

</LinearLayout>